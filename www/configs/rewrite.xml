<?xml version='1.0' standalone='yes'?>
<rules>
    <default>
        <rule pattern="/">/news/list</rule>
    </default>
    <news>
        <rule pattern="/([^/]+)/?">/$1/list</rule>
        <rule pattern="/news/([0-9]+)/?">/news/$1/view</rule>
        <rule pattern="/news/([a-z][a-z0-9]+)/?">/news/$1/list</rule>
    </news>   
    <page>
        <rule pattern="/([^/]+)/?">/$1/view</rule>
        <rule pattern="/page/(.+?)/?">/page/$1/view</rule>
    </page>
</rules>